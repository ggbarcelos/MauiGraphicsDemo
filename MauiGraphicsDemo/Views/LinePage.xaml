<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawables="clr-namespace:MauiGraphicsDemo.Drawables"
             x:Class="MauiGraphicsDemo.Views.LinePage"
             Title="Line">
    
    <ContentPage.Resources>
        <drawables:LineDrawable x:Key="lineDrawable"/>
    </ContentPage.Resources>
    <GraphicsView Drawable="{StaticResource lineDrawable}"
                  x:Name="LineGraphicsView">
    </GraphicsView>
</ContentPage>
